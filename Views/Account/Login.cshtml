@{ 
    ViewData["Title"] = "Login";
}

<div class="row py-5 bg-xx-2">
    
    <div class="col-12 text-center mb-3">
        <h1 class="display-4 text-white">Login</h1>
    </div>

    <div class="d-none d-lg-block col-lg-4"></div>

    <div class="col-12 col-lg-4">
        <form asp-controller="Account" asp-action="Login" method="POST">
            @Html.AntiForgeryToken()

            <div class="form-group mb-2">
                <label for="username" class="sr-only">Username</label>
                <input id="username" type="text" class="form-control form-control-lg border-sharp" name="username" placeholder="Username" autofocus />
            </div>

            <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input id="password" type="password" class="form-control form-control-lg border-sharp" name="password" placeholder="Password" />
            </div>

            <button type="submit" class="btn-lg form-control border-sharp bg-xx-5 text-white">Login</button>
        </form>
    </div>

</div>